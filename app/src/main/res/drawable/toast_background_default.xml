<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Màu nền mặc định -->
    <solid android:color="#333333" /> <!-- Xám đậm, bạn có thể đổi -->

    <!-- Bo góc -->
    <corners android:radius="12dp" />

    <!-- Viền (nếu muốn) -->
    <stroke
        android:width="1dp"
        android:color="#555555" />

    <!-- Đổ bóng nhẹ -->
    <padding
        android:top="8dp"
        android:bottom="8dp"
        android:left="12dp"
        android:right="12dp"/>
</shape>
