<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- màu nền xám nhạt -->
    <solid android:color="#F5F5F5"/>

    <!-- bo góc -->
    <corners android:radius="10dp"/>

    <!-- viền mảnh màu trong suốt nhẹ -->
    <stroke
        android:width="1dp"
        android:color="#E0E0E0" />

    <!-- thêm bóng giả để nổi bật -->
    <padding
        android:left="8dp"
        android:top="6dp"
        android:right="8dp"
        android:bottom="6dp"/>
</shape>
