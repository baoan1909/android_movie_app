<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- màu nền xám nhạt -->
    <solid android:color="#BFBEBE"/>

    <!-- bo góc -->
    <corners android:radius="8dp"/>

    <!-- viền mảnh -->
    <stroke
        android:width="1dp"
        android:color="#DDDDDD" />

    <!-- padding bên trong -->
    <padding
        android:left="8dp"
        android:top="4dp"
        android:right="8dp"
        android:bottom="4dp"/>
</shape>
