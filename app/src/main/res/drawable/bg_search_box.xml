<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Nền màu tối -->
    <solid android:color="#1E1E1E" />

    <!-- Viền mờ nhẹ -->
    <stroke
        android:width="1dp"
        android:color="#333333" />

    <!-- Bo góc -->
    <corners android:radius="12dp" />

    <!-- Padding trong box -->
    <padding
        android:left="8dp"
        android:top="4dp"
        android:right="8dp"
        android:bottom="4dp" />
</shape>
