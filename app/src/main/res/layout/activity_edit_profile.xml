<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@drawable/bg_popup_info"
    android:gravity="center">

    <!-- Tiêu đề -->
    <TextView
        android:id="@+id/tvTitle_edit_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chỉnh sửa tài khoản"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginBottom="16dp" />

    <!-- Username -->
    <EditText
        android:id="@+id/edtUsername_edit_profile"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Tên người dùng"
        android:padding="12dp"
        android:background="@drawable/bg_popup_edit_info"
        android:textColor="@android:color/black"
        android:textColorHint="#888"
        android:layout_marginBottom="12dp"/>

    <!-- Email -->
    <EditText
        android:id="@+id/edtEmail_edit_profile"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:padding="12dp"
        android:background="@drawable/bg_popup_edit_info"
        android:textColor="@android:color/black"
        android:textColorHint="#888"
        android:layout_marginBottom="12dp"/>

    <!-- Password -->
    <EditText
        android:id="@+id/edtPassword_edit_profile"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Mật khẩu mới (bỏ trống nếu không đổi)"
        android:inputType="textPassword"
        android:padding="12dp"
        android:background="@drawable/bg_popup_edit_info"
        android:textColor="@android:color/black"
        android:textColorHint="#888"
        android:layout_marginBottom="12dp"/>

    <!-- Re-enter Password -->
    <EditText
        android:id="@+id/edtRePassword_edit_profile"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Nhập lại mật khẩu mới"
        android:inputType="textPassword"
        android:padding="12dp"
        android:background="@drawable/bg_popup_edit_info"
        android:textColor="@android:color/black"
        android:textColorHint="#888"
        android:layout_marginBottom="20dp"/>

    <!-- Row chứa 2 button -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:weightSum="2"
        android:layout_marginTop="8dp">

        <!-- Save button -->
        <Button
            android:id="@+id/btnSave_edit"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:text="Lưu thay đổi"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:backgroundTint="@color/colorPrimaryDark"
            android:textColor="@android:color/white"
            android:layout_marginEnd="8dp"/>

        <!-- Cancel button -->
        <Button
            android:id="@+id/btnCancel_edit"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:text="Quay lại"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:backgroundTint="@color/colorPrimaryDark"
            android:textColor="@android:color/white"
            android:layout_marginStart="8dp"/>
    </LinearLayout>
</LinearLayout>
