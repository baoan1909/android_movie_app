<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="#2A2A2A">

    <TextView
        android:id="@+id/tv_speed_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1.00x"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/btn_decrease_speed"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_remove" />

        <SeekBar
            android:id="@+id/seekbar_speed"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:progress="50"
            android:progressTint="@color/orange"
            android:thumbTint="@color/orange"
            android:splitTrack="false" />

        <ImageView
            android:id="@+id/btn_increase_speed"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_add" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/toggle_group_speed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/btn_speed_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="1,0"
            android:textColor="@color/white"
            android:background="@drawable/speed_button_selector" />

        <Button
            android:id="@+id/btn_speed_1_25"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:text="1,25"
            android:textColor="@color/white"
            android:background="@drawable/speed_button_selector" />

        <Button
            android:id="@+id/btn_speed_1_5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:text="1,5"
            android:textColor="@color/white"
            android:background="@drawable/speed_button_selector" />

        <Button
            android:id="@+id/btn_speed_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:text="2,0"
            android:textColor="@color/white"
            android:background="@drawable/speed_button_selector" />

        <Button
            android:id="@+id/btn_speed_3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:text="3,0"
            android:textColor="@color/white"
            android:background="@drawable/speed_button_selector" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bình thường"
        android:layout_marginTop="4dp"
        android:textColor="@color/white"
        android:layout_marginStart="16dp" />

</LinearLayout>
