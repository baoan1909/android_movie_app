<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/bg_popup_info">

    <!-- Avatar + Tên + Email -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/imgAvatar_popup_info"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/anime_1"
            android:scaleType="centerCrop"
            android:layout_marginRight="12dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvName_popup_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tên người dùng"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="#000"/>

            <TextView
                android:id="@+id/tvEmail_popup_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="email@gmail.com"
                android:textSize="14sp"
                android:textColor="#666"/>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginVertical="12dp"
        android:background="#DDDDDD" />

    <!-- Các thông tin khác -->
    <TextView
        android:id="@+id/tvCreatedAt_popup_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ngày tạo: 2025-09-16"
        android:textSize="16sp"
        android:padding="8dp" />

    <TextView
        android:id="@+id/tvStatus_popup_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Trạng thái: Hoạt động"
        android:textSize="16sp"
        android:padding="8dp" />

    <!-- Nút sửa thông tin -->
    <LinearLayout
        android:id="@+id/btnEditProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="12dp"
        android:background="@drawable/bg_popup_edit_info"
        android:backgroundTint="#0A5BDE">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_edit"
            android:contentDescription="Edit Icon"
            android:layout_marginEnd="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cập nhật"
            android:textSize="16sp"
            android:textColor="#75FB4C"/>
    </LinearLayout>
</LinearLayout>
