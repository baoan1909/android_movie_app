<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121212"
    tools:context=".MovieDetailActivity">

    <LinearLayout
        android:id="@+id/containerRoot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Video Player Container -->
        <FrameLayout
            android:id="@+id/playerContainer"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:background="@android:color/black">

            <!-- Video Player -->
            <FrameLayout
                android:id="@+id/videoContainer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/black">

                <!-- ExoPlayer View (disable default controller; we use custom overlay) -->
                <androidx.media3.ui.PlayerView
                    android:id="@+id/playerView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:use_controller="false"
                    app:resize_mode="fit"
                    app:show_buffering="when_playing"
                    android:background="@android:color/black" />

                <!-- Top Controls -->
                <LinearLayout
                    android:id="@+id/layoutTopControls"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/btnBack"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_arrow_back"
                        app:tint="@android:color/white" />

                    <TextView
                        android:id="@+id/txtAgeRating"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="T18"
                        android:textColor="@android:color/white"
                        android:textSize="16sp"
                        android:layout_marginStart="8dp" />

                    <ImageView
                        android:id="@+id/btnBookmark"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="16dp"
                        android:src="@drawable/ic_bookmark_border"
                        app:tint="@android:color/white" />

                    <ImageView
                        android:id="@+id/btnCast"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="16dp"
                        android:src="@drawable/ic_cast"
                        app:tint="@android:color/white" />

                    <ImageView
                        android:id="@+id/btnMore"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_more_vert"
                        app:tint="@android:color/white" />
                </LinearLayout>

                <!-- Center Controls -->
                <LinearLayout
                    android:id="@+id/layoutCenterControls"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/btnReplay10"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_replay_10"
                        app:tint="@android:color/white" />

                    <ImageView
                        android:id="@+id/btnPlayPause"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginHorizontal="32dp"
                        android:src="@drawable/ic_pause"
                        app:tint="@android:color/white" />

                    <ImageView
                        android:id="@+id/btnForward10"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_forward_10"
                        app:tint="@android:color/white" />
                </LinearLayout>

                <!-- Bottom Controls -->
                <LinearLayout
                    android:id="@+id/layoutBottomControls"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:padding="16dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txtCurrentTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="00:30"
                        android:textColor="@android:color/white" />

                    <SeekBar
                        android:id="@+id/seekBar"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:progress="10"
                        android:layout_marginHorizontal="8dp" />

                    <TextView
                        android:id="@+id/txtTotalTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="49:30"
                        android:textColor="@android:color/white" />

                    <ImageView
                        android:id="@+id/btnFullscreen"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginStart="16dp"
                        android:src="@drawable/ic_fullscreen"
                        app:tint="@android:color/white" />
                </LinearLayout>
            </FrameLayout>
        </FrameLayout>

        <!-- Ad Banner -->
        <LinearLayout
            android:id="@+id/layoutAdBanner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#0D47A1"
            android:padding="12dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtAdMessage"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Đăng ký gói No Ads để xem phim trọn vẹn, liền mạch, không còn quảng cáo."
                android:textColor="@android:color/white"
                android:layout_marginHorizontal="12dp" />

            <Button
                android:id="@+id/btnSubscribe"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Đăng ký"
                android:background="@drawable/live_tag_background"
                android:textColor="@android:color/white"
                android:textAllCaps="false" />
        </LinearLayout>

        <!-- Movie Info -->
        <LinearLayout
            android:id="@+id/layoutMovieInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/layoutMovieTitleRow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/layoutMovieTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtMovieTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Thanh Gươm Diệt Quỷ (Phần 4): Làng Rèn Kiếm - Tập 1"
                        android:textColor="@android:color/white"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/btnExpandTitle"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_arrow_drop_down"
                    android:layout_gravity="center_vertical"
                    app:tint="@android:color/white" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/txtMovieRating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="⭐ 4.8 • "
                    android:textColor="#FFC107"
                    android:layout_marginTop="8dp" />
                <TextView
                    android:id="@+id/txtRatingDialog"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Đánh giá"
                    android:textColor="#FFC107"
                    android:layout_marginTop="8dp" />
            </LinearLayout>


            <TextView
                android:id="@+id/txtMovieYear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2023 | T18 | 11/11 tập | Nhật Bản"
                android:textColor="@android:color/darker_gray"
                android:layout_marginTop="4dp" />

            <TextView
                android:id="@+id/txtMovieInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bạo lực, khỏa thân, kinh dị, hành vi nguy hiểm, dễ bắt chước"
                android:textColor="@android:color/darker_gray"
                android:layout_marginTop="4dp"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- Action Buttons -->
        <LinearLayout
            android:id="@+id/layoutActionButtons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="16dp">

            <TextView
                android:id="@+id/btnFollow"
                style="@style/ActionButton"
                android:drawableTop="@drawable/ic_favorite_border"
                android:text="Theo dõi"
                android:textColor="@color/white"
                android:layout_marginLeft="20dp" />

            <TextView
                android:id="@+id/btnShare"
                style="@style/ActionButton"
                android:drawableTop="@drawable/ic_share"
                android:text="Chia sẻ"
                android:textColor="@color/white"
                android:layout_marginLeft="20dp" />

            <TextView
                android:id="@+id/btnDownload"
                style="@style/ActionButton"
                android:drawableTop="@drawable/ic_download"
                android:text="Tải xuống"
                android:textColor="@color/white"
                android:layout_marginLeft="20dp" />
        </LinearLayout>

        <!-- Comments -->
        <LinearLayout
            android:id="@+id/layoutComments"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/txtCommentsTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bình luận (614)"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

            <View
                android:id="@+id/dividerComments"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#444"
                android:layout_marginVertical="12dp" />

            <LinearLayout
                android:id="@+id/layoutCommentItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgUserAvatar"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_account_circle" />

                <TextView
                    android:id="@+id/txtComment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:text="ai xem lại điểm danh (7/5/2025)"
                    android:textColor="@android:color/darker_gray" />
            </LinearLayout>
        </LinearLayout>

        <!-- Tabs -->
        <LinearLayout
            android:id="@+id/layoutTabs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp">

            <TextView
                android:id="@+id/tabEpisodes"
                style="@style/TabButton.Selected"
                android:text="Danh sách" />

            <TextView
                android:id="@+id/tabSeasons"
                style="@style/TabButton"
                android:text="Các Season" />

            <TextView
                android:id="@+id/tabTrailers"
                style="@style/TabButton"
                android:text="Trailers &amp; videos" />

            <TextView
                android:id="@+id/tabRelated"
                style="@style/TabButton"
                android:text="Liên quan" />
        </LinearLayout>

        <View
            android:id="@+id/dividerTabs"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#434343" />
    </LinearLayout>
</ScrollView>
